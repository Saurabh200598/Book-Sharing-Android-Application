<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/bg"
    tools:context="com.example.am99m.booksharingapp.SignUpActivity">


    <RelativeLayout
        android:visibility="gone"
        android:id="@+id/rel_lay1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_centerHorizontal="true"
        >
    <LinearLayout
        android:id="@+id/lin_lay1"
        android:layout_marginTop="20dp"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="UserName"
                android:textAllCaps="true"
                android:textColor="@color/white"
                android:fontFamily="sans-serif-light"
                android:textSize="15sp"
                />
            <EditText
                android:id="@+id/getNumber"
                android:hint="Mobile no."
                android:inputType="number"
                android:textColorHint="@color/white"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:layout_marginTop="5dp"
                android:background="@drawable/et_bg"
                android:textSize="15sp"
                android:textColor="@color/white"
                android:fontFamily="sans-serif-light"
                android:paddingLeft="15dp"
                android:paddingRight="15dp"/>

        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_marginTop="20dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Name"
                android:textAllCaps="true"
                android:textColor="@color/white"
                android:fontFamily="sans-serif-light"
                android:textSize="15sp"
                />
            <EditText
                android:id="@+id/getName"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:layout_marginTop="5dp"
                android:background="@drawable/et_bg"
                android:textSize="15sp"
                android:textColor="@color/white"
                android:fontFamily="sans-serif-light"
                android:paddingLeft="15dp"
                android:paddingRight="15dp"/>

        </LinearLayout>

    </LinearLayout>
    <Button
        android:id="@+id/send_otp"
        android:layout_width="wrap_content"
        android:layout_height="40dp"
        android:text="Send OTP"
        android:textAllCaps="false"
        android:layout_centerHorizontal="true"
        android:background="@drawable/btn_bg"
        android:layout_below="@id/lin_lay1"
        android:paddingLeft="70dp"
        android:paddingRight="70dp"
        android:textColor="@color/white"
        android:fontFamily="sans-serif-medium"
        android:layout_marginTop="50dp"
        android:textSize="16sp"/>
    </RelativeLayout>

    <RelativeLayout
        android:visibility="gone"
        android:id="@+id/rel_lay2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginRight="20dp"
        android:layout_marginLeft="20dp"
        >

        <TextView
            android:id="@+id/tv1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Please wait."
            android:textColor="@color/white"
            android:textSize="25dp"
            android:layout_marginTop="40dp"/>
        <TextView
            android:id="@+id/tv2"
            android:layout_below="@+id/tv1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="We will auto verify the OTP"
            android:textColor="@color/white"
            android:textSize="25dp"
            android:layout_marginTop="10dp"/>
        <TextView
            android:id="@+id/tv3"
            android:layout_below="@+id/tv2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="sent to "
            android:textColor="@color/white"
            android:textSize="25dp"
            android:layout_marginTop="10dp"/>
        <TextView
            android:id="@+id/number"
            android:layout_below="@+id/tv2"
            android:layout_toEndOf="@+id/tv3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/white"
            android:textSize="25dp"
            android:layout_marginTop="10dp"/>
        <LinearLayout
            android:id="@+id/lin_lay"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/tv3"
            android:layout_marginTop="50dp"
            android:layout_centerHorizontal="true"
            android:orientation="horizontal">

            <EditText
                android:id="@+id/ed1"
                android:inputType="numberPassword"
                android:layout_width="30dp"
                android:layout_height="wrap_content"
                android:textColor="@color/white"
                android:backgroundTint="@color/white">
                <requestFocus/>
            </EditText>
            <EditText
                android:id="@+id/ed2"
                android:layout_width="30dp"
                android:layout_height="wrap_content"
                android:textColor="@color/white"
                android:backgroundTint="@color/white"
                android:inputType="numberPassword"/>
            <EditText
                android:id="@+id/ed3"
                android:layout_width="30dp"
                android:layout_height="wrap_content"
                android:textColor="@color/white"
                android:backgroundTint="@color/white"
                android:inputType="numberPassword"/>
            <EditText
                android:id="@+id/ed4"
                android:layout_width="30dp"
                android:layout_height="wrap_content"
                android:textColor="@color/white"
                android:backgroundTint="@color/white"
                android:inputType="numberPassword"/>
            <EditText
                android:id="@+id/ed5"
                android:layout_width="30dp"
                android:layout_height="wrap_content"
                android:textColor="@color/white"
                android:backgroundTint="@color/white"
                android:inputType="numberPassword"/>
            <EditText
                android:id="@+id/ed6"
                android:layout_width="30dp"
                android:layout_height="wrap_content"
                android:textColor="@color/white"
                android:backgroundTint="@color/white"
                android:inputType="numberPassword"/>
        </LinearLayout>
        <Button
            android:id="@+id/login"
            android:layout_width="wrap_content"
            android:layout_height="40dp"
            android:text="Login"
            android:textAllCaps="false"
            android:layout_centerHorizontal="true"
            android:background="@drawable/btn_bg"
            android:layout_below="@id/lin_lay"
            android:paddingLeft="70dp"
            android:paddingRight="70dp"
            android:textColor="@color/white"
            android:fontFamily="sans-serif-medium"
            android:layout_marginTop="50dp"
            android:textSize="16sp"/>

    </RelativeLayout>


</RelativeLayout>
